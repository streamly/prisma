{
    "$schema": "https://openapi.vercel.sh/vercel.json",
    "version": 2,
    "crons": [
        {
            "path": "/api/cron/billing",
            "schedule": "*/30 * * * *"
        },
        {
            "path": "/api/cron/costs?interval=today",
            "schedule": "0 * * * *"
        },
        {
            "path": "/api/cron/costs?interval=yesterday",
            "schedule": "10 0 * * *"
        }
    ]
}