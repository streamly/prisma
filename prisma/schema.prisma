generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @db.VarChar(32)
  sub       String? @db.Text
  cus       String? @db.Text
  firstName String? @map("first_name") @db.Text
  lastName  String? @map("last_name") @db.Text
  role      String? @db.Text
  company   String? @db.Text
  phone     String? @db.Text
  channel   String? @db.Text
  billing   Int?
  plan      Int?
  trusted   Int?
  modified  Int?
  created   Int?

  comments Comment[]

  @@map("users")
}

model Comment {
  id      Int    @id @default(autoincrement())
  cid     String @db.VarChar(32)
  vid     String @db.VarChar(32)
  uid     String @db.VarChar(32)
  comment String @db.Text
  created Int?
  status  Int?

  user User @relation(fields: [uid], references: [id])

  @@map("comments")
}
