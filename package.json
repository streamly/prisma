{
  "name": "comment-management-api",
  "version": "1.0.0",
  "description": "Secure comment management system with user authentication, built with PostgreSQL, Prisma ORM, and Node.js for Vercel deployment",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "vercel dev",
    "dev:local": "npm run dev:build && nodemon dist/index.js",
    "dev:build": "node build.js",
    "start": "node dist/index.js",
    "build": "node build.js && prisma generate",
    "postinstall": "prisma generate",
    "setup": "node setup.js",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "test": "node test/test-api.js"
  },
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.0",
    "chokidar": "^4.0.3",
    "esbuild": "^0.25.8",
    "nodemon": "^3.1.10",
    "prisma": "^5.7.1",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
